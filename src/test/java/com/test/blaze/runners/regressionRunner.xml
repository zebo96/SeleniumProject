        <parameter name="expectedAlertMessage" value="Product added"> </parameter>

        <parameter name="option" value="Laptops"> </parameter>
        <parameter name="macbookType" value="MacBook Pro"> </parameter>
        <parameter name="expectedMessage" value="Product added"> </parameter>
        <parameter name="expectedTitle" value="MacBook Pro"> </parameter>
        <parameter name="expectedPrice2" value="1100"> </parameter>
        <parameter name="name" value="Zebo"> </parameter>
        <parameter name="country" value="USA"> </parameter>
        <parameter name="city" value="Chicago"> </parameter>
        <parameter name="number" value="123456789"> </parameter>
        <parameter name="month" value="June"> </parameter>
        <parameter name="year" value="2023"> </parameter>
        <classes>
            <class name="com.test.blaze.tests.BlazeMacBookProTest"> </class>
